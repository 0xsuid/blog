<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ title | safe }}</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ meta.description | safe }}">
    <meta name="referrer" content="no-referrer-when-downgrade">
    <link rel="preload" as="style" href="{{ '/style.css' | fullUrl }}" />
    <link rel="stylesheet" href="{{ '/style.css' | fullUrl }}" />
    <link rel="icon" href="{{ '/assets/logo.svg' | fullUrl }}" type="image/svg">

    <!-- open graph start -->
    <meta property="og:site_name" content="Godhani Harsh">
    <meta property="og:type" content="{{ meta.og.type | safe }}">
    <meta property="og:title" content="{{ title | safe }}">
    <meta property="og:description" content="{{ meta.description | safe }}">
    <meta property="og:url" content="{{ page.url | fullUrl }}">
    <meta property="og:image" content="{{ meta.og.image | fullUrl if meta.og.image }}" />
    {% if og.type === "article" %}
    <meta property="article:published_time" content="{% published %}">
    <meta property="article:modified_time" content="{% modified %}">
    {% endif %}
    <!-- open graph end -->

    <!-- twitter card metadata start -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@0xsuid">
    <meta name="twitter:title" content="{{ title | safe }}">
    <meta name="twitter:description" content="{{ meta.description | safe }}">
    <meta name="twitter:image" content="{{ meta.og.image | fullUrl if meta.og.image }}" />
    <!-- twitter card metadata end -->

    <script type="application/ld+json">
        {% include "jsonld.njk" %}
    </script>
</head>
<body class="mx-auto max-w-xs lg:max-w-5xl bg-gray-600 text-white">
    {% include "header.njk" %}
    <main class="mx-auto {% if mainClass %}{{ mainClass }}{% endif %}">
        {% block content %}
        {{ content | safe }}
        {% endblock %}
    </main>
</body>
</html>